<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sahilbansal.mychat.changestatus">

    <include
        android:id="@+id/statustoolbar"
        layout="@layout/app_toolbar_layout"></include>

    <EditText
        android:id="@+id/enter_status"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/logintoolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Enter the status"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/save_changes"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_below="@+id/enter_status"
        android:background="@color/colorPrimary"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:text="Save Changes" />


</RelativeLayout>
